<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css"
    />
    <link rel="stylesheet" href="css/map.css" />
  </head>
  <body>
    <!-- pop up modal with the directions logic -->
    <div id="popup-modal-container">
      <div class="modal-background">
        <div class="modal">
          <h1>Get Directions</h1>
          <input
            id="from"
            placeholder="your location"
            value="<%= myAddress %>"
          />
          <input id="to" placeholder="your destination" />
          <button class="get"><h3>get directions</h3></button>
          <div id="output"></div>
          <ul id="steps"></ul>
        </div>
      </div>
    </div>
    <!-- end of modal -->

    <div class="content">
      <div class="form">
        <form method="post" action="sell">
          <input type="text" name="title" placeholder="name of item" />
          <input type="number" name="price" placeholder="price" />
          <input type="text" name="address" value="<%= myAddress %>" />
          <button type="submit">Post</button>
        </form>
      </div>

      <div class="market">
        <button class="sell">Sale an item</button>
        <button class="view">View market</button>

        <div class="buttons">
          <% for(let i = 0; i < items.length; i++){ %>
          <div>
            <h4><%= items[i].title %></h4>
            <p>$<%= items[i].price %></p>
            <span><%= items[i].address %></span>
            <div id="googleMap"></div>
            <button class="buy" value="<%= items[i]._id %>">Buy</button>
            <div id="four" value="<%= items[i].address %>" class="open">Get Directions</div>
            <button onclick="deleteItem('<%= items[i]._id %>')">
              Delete Items
            </button>
          </div>
          <% } %>
        </div>
       
      </div>
    </div>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjF4bqBu5j4eX7WU_EUnvlFRTkvs8iLac&libraries=places"></script>
    <script src="marketplace.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  </body>
</html>
