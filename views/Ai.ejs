    <div id="input-container">
      <form action="/getAi" method="post">
      <input type="text" id="user-input" name="question" placeholder="Ask a question">
      <button class="sendMessage" type="submit">Send</button>
    </form>
    </div>
  </div>
  <% if(answer){ %>
  <%= answer %>
 <% } %>

  <script src="Ai.js"></script>
</body>
</html>

